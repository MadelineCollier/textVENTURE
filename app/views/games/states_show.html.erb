<section>
  <div class="state-info">
    <% @state = State.find_by(game_id: params[:new_id], id: params[:state_id]) %>
    <h2><%= @state.name %></h2>
    <p><%= @state.description %></p>
  </div>
</section>

<aside id="states-sidebar">
  <section>
    <header>
      <h2>States</h2>
    </header>
      <%= State.where(game_id: params[:new_id]).find_each do |state| %>
        <ul>
          <%= link_to state.name, "/games/new/#{params[:new_id]}/states/#{state.id}" %>
        </ul>
      <% end %>
    <%= link_to 'Add New State', "/games/new/#{params[:new_id]}/states" %>
  </section>
</aside>

<div class="start-connecting-link">
  <%= link_to 'Start adding connections', "/games/new/#{params[:new_id]}/states/connections" %>
</div>